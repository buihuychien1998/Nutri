<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/top_background"
        android:paddingBottom="@dimen/top_layout_padding"
        android:paddingLeft="@dimen/top_layout_margin"
        android:paddingRight="@dimen/top_layout_margin"
        android:paddingTop="@dimen/top_layout_padding" >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/workout_complete_normal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_font_size" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/share_button"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/btnProceed_bottom_margin" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layoutComplete"
            android:paddingBottom="@dimen/complete_cycle_padding_bottom"
            android:paddingTop="@dimen/complete_cycle_padding_bottom" >

            <TextView
                android:id="@+id/txtCongratulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/congratulations"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_font_size" />

            <RelativeLayout
                android:id="@+id/layoutCycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCongratulation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/cycle_padding_top"
                android:background="@drawable/workout_complete_screen_completed_icon_port" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:id="@+id/txtDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/day_complete"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/day_complete_tablet" />

                    <TextView
                        android:id="@+id/txtComplete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtDay"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/completed"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/day_complete_tablet_sub" />
                </RelativeLayout>
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/layoutFuel"
                android:layout_below="@+id/layoutCycle" >

                <TextView
                    android:id="@+id/txtCompleteNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cycle_padding_top"
                    android:layout_marginLeft="@dimen/cycle_padding_top"
                    android:layout_marginRight="@dimen/cycle_padding_top"
                    android:layout_marginTop="@dimen/cycle_padding_top"
                    android:gravity="center"
                    android:text="@string/lbs"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sub_row_name" />
            </ScrollView>

            <LinearLayout
                android:id="@+id/layoutFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/clock_fuel_point_scr" />

                <TextView
                    android:id="@+id/txtFuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/congrats_text_margin"
                    android:gravity="center"
                    android:text="@string/fuel_points_burned"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/burn_text" />

                <TextView
                    android:id="@+id/txtPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/congrats_text_margin"
                    android:gravity="center"
                    android:text="@string/thirtyone_to_sixty"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/point_font_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/complete_bottom_background_port"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/update_margin_left"
                android:gravity="center"
                android:text="@string/update_your_weight"
                android:textColor="@android:color/white"
                android:textSize="@dimen/update_text" />

            <LinearLayout
                android:id="@+id/layoutWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/congrats_text_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edtWeight"
                    android:layout_width="@dimen/weight_edt_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/weight_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/point_font_size" />

                <TextView
                    android:id="@+id/txtLbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/congrats_text_margin"
                    android:gravity="center"
                    android:text="@string/lbs"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/main_row_name" />
            </LinearLayout>

            <Button
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/done_button_margin_left"
                android:background="@drawable/done_port"
                android:contentDescription="@string/app_name"
                android:text="@string/done"
                android:textColor="@android:color/white"
                android:textSize="@dimen/btn_font_size" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>