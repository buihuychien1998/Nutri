<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutGorilla"
    android:layout_width="@dimen/fuel_background_width"
    android:layout_height="@dimen/fuel_background_height"
    android:background="@drawable/bkg_item_fuel_point_scr" >

    <LinearLayout
        android:id="@+id/layoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_margin_left"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtDayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_30"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fuel_number_text" />
        
        <TextView
            android:id="@+id/txtDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/days"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fuel_number_text_sub" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/text_margin_left"
        android:background="@drawable/done"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/gorilla_menu_sub" />

</RelativeLayout>