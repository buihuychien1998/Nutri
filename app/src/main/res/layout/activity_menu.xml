<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgGorilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/hula_icon_bottom_margin"
        android:contentDescription="@string/app_name"
        android:src="@drawable/hula_icon" />

    <RelativeLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/menu_margin"
        android:paddingTop="@dimen/layoutGorilla_top_margin"
        android:paddingBottom="@dimen/layoutGorilla_top_margin"
        android:background="@drawable/menu_item_background_yellow" >

        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/thumbnail_margin_left"
            android:layout_marginTop="@dimen/thumbnail_margin_top"
            android:layout_marginBottom="@dimen/thumbnail_margin_top"
            android:contentDescription="@string/app_name"
            android:src="@drawable/photo_icon_main_workout" />

        <LinearLayout
            android:id="@+id/layoutNameMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgMain"
            android:layout_toLeftOf="@+id/imgArrow"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/txtNameMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main"
                android:lines="2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/gorilla_menu" />

            <TextView
                android:id="@+id/txtNameMainSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workouts"
                android:textColor="@android:color/white"
                android:textSize="@dimen/gorilla_menu_sub"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/arrow_right_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layoutPremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layoutGorilla_top_margin"
        android:paddingBottom="@dimen/layoutGorilla_top_margin"
        android:background="@drawable/menu_item_background_red" >

        <ImageView
            android:id="@+id/imgPremium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/thumbnail_margin_left"
            android:layout_marginTop="@dimen/thumbnail_margin_top"
            android:layout_marginBottom="@dimen/thumbnail_margin_top"
            android:contentDescription="@string/app_name"
            android:src="@drawable/photo_icon_premium_workout" />

        <LinearLayout
            android:id="@+id/layoutNamePremium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgPremium"
            android:layout_toLeftOf="@+id/imgArrow1"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/txtNamePremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/premium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/gorilla_menu" />

            <TextView
                android:id="@+id/txtNamePremiumSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workouts"
                android:textColor="@android:color/white"
                android:textSize="@dimen/gorilla_menu_sub"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgArrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/arrow_right_margin"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

</LinearLayout>